{{>header}}
<div>
    <div class="">
        <div class="max-w-[--max-w] mx-auto px-2">
            <div class="py-2 font-semibold text-[1rem]">
                Alışveriş Sepeti
            </div>
        </div>
    </div>
    <hr>
    <div class="bg-black/5">
        <div class="max-w-[--max-w] mx-auto ">
            <div class="py-7 px-5  text-center flex items-center justify-center space-x-5 font-semibold text-[1.4rem]">
                <button class="text-black pointer-events-auto hidden lg:inline-block">Sepet Onay</button>
                <span clasS="tio text-[1.4rem] hidden lg:inline-block">chevron_right</span>
                <button class="text-orange-600 pointer-events-auto">Sipariş Bilgileri</button>
                <span clasS="tio text-[1.4rem] hidden lg:inline-block">chevron_right</span>
                <button class="text-gray-500 pointer-events-none hidden lg:inline-block">Ödeme</button>
            </div>
        </div>
    </div>
    <div>
        <div class="max-w-[--max-w] mx-auto flex flex-col lg:flex-row py-5 lg:py-7">
            <div class="lg:w-1/2 p-2 px-4 lg:px-10">
                <div class="px-4 py-2 border border-gray-200 rounded bg-white">
                    <form class="space-y-2 fat-area">
                        <div class="font-semibold text-[1.2rem] pb-4">Fatura Bilgileri</div>
                        <div class="flex space-x-2">
                            <div class="w-1/2">
                                <label for="isim" class="frm-lbl">İsim*</label>
                                <input type="text" name="isim" placeholder="isim" class="frm-txt" value="{{musteri.adres.fatura.isim}}"/>
                            </div>
                            <div class="w-1/2">
                                <label for="soyisim" class="frm-lbl">Soyisim*</label>
                                <input type="text" name="soyisim" placeholder="soyisim" class="frm-txt" value="{{musteri.adres.fatura.soyisim}}" />
                            </div>
                        </div>
                        <div class="flex space-x-2">
                            <div class="w-1/3">
                                <label for="tc" class="frm-lbl">TC*</label>
                                <input type="text" name="tc" placeholder="11111111111" class="frm-txt" value="{{musteri.adres.fatura.tc}}" />
                            </div>
                            <div class="w-1/3">
                                <label for="telefon" class="frm-lbl">Telefon*</label>
                                <input type="text" name="telefon" placeholder="+90XXXXXXXXXX" class="frm-txt" value="{{musteri.adres.fatura.telefon}}" />
                            </div>
                            <div class="w-1/3">
                                <label for="email" class="frm-lbl">Email*</label>
                                <input type="text" name="email" placeholder="xxx@xxx.xxx" class="frm-txt" value="{{musteri.adres.fatura.email}}"/>
                            </div>
                        </div>
                        <div>
                            <label for="" class="frm-lbl">Adres</label>
                            <div class="flex items-center space-x-2 mb-1">
                                <select name="il_id" class="frm-slct" data-ur="{{musteri.adres.fatura.il_id}}"></select>
                                <select name="ilce_id" class="frm-slct" data-ur="{{musteri.adres.fatura.ilce_id}}"></select>
                                <select name="mahalle_id" class="frm-slct" data-ur="{{musteri.adres.fatura.mahalle_id}}"></select>
                            </div>
                            <div class="text-end text-[0.8rem] py-1">
                                Posta Kodu: <span class="pk"></span>
                            </div>
                            <input type="text" class="frm-txt" name="adres"
                                placeholder="Cadde/Bulvar/Sokak/Kapı No..." value="{{musteri.adres.fatura.adres}}"/>
                        </div>
                        <div>
                            <label for="aciklama" class="frm-lbl">Açıklama</label>
                            <textarea class="frm-textarea" name="aciklama" id="aciklama" cols="30"
                                placeholder="Mesaj Giriniz" class="w-full h-[100px]">{{musteri.adres.fatura.aciklama}}</textarea>
                        </div>
                        <div class="flex items-center space-x-1">
                            <input type="checkbox" class="frm-chckbx" id="isOtherAdres" name="isOtherAdres" />
                            <label for="isOtherAdres" class="select-none text-[0.8rem] lg:text-[1rem]">Fatura bilgileri dışında adrese
                                gönderilsin?</label>
                        </div>
                    </form>
                    <form style="display: none" class="space-y-2 pt-4 kar-area">
                        <hr />
                        <div class="font-semibold text-[1.2rem] pb-4">Adres Bilgileri</div>
                        <div class="flex space-x-2">
                            <div class="w-1/2">
                                <label for="isim" class="frm-lbl">İsim*</label>
                                <input type="text" name="isim" placeholder="isim" class="frm-txt" value="{{musteri.adres.kargo.isim}}" />
                            </div>
                            <div class="w-1/2">
                                <label for="soyisim" class="frm-lbl">Soyisim*</label>
                                <input type="text" name="soyisim" placeholder="soyisim" class="frm-txt" value="{{musteri.adres.kargo.soyisim}}"/>
                            </div>
                        </div>
                        <div class="flex space-x-2">
                             <div class="w-1/3">
                                <label for="tc" class="frm-lbl">TC*</label>
                                <input type="text" name="tc" placeholder="11111111111" class="frm-txt" value="{{musteri.adres.kargo.tc}}" />
                            </div>
                            <div class="w-1/3">
                                <label for="telefon" class="frm-lbl">Telefon*</label>
                                <input type="text" name="telefon" placeholder="+90XXXXXXXXXX" class="frm-txt" value="{{musteri.adres.kargo.telefon}}" />
                            </div>
                            <div class="w-1/3">
                                <label for="email" class="frm-lbl">Email*</label>
                                <input type="text" name="email" placeholder="xxx@xxx.xxx" class="frm-txt" value="{{musteri.adres.kargo.email}}"/>
                            </div>
                        </div>
                        <div>
                            <label for="" class="frm-lbl">Adres</label>
                            <div class="flex items-center space-x-2 mb-1">
                                <select name="il_id" class="frm-slct" data-ur="{{musteri.adres.kargo.il_id}}"></select>
                                <select name="ilce_id" class="frm-slct" data-ur="{{musteri.adres.kargo.ilce_id}}"></select>
                                <select name="mahalle_id" class="frm-slct" data-ur="{{musteri.adres.kargo.mahalle_id}}"></select>
                            </div>
                            <div class="text-end text-[0.8rem] py-1">
                                Posta Kodu: <span class="pk"></span>
                            </div>
                            <input type="text" class="frm-txt" name="adres"
                                placeholder="Cadde/Bulvar/Sokak/Kapı No..." value="{{musteri.adres.kargo.adres}}"/>
                        </div>
                        <div>
                            <label for="aciklama" class="frm-lbl">Açıklama</label>
                            <textarea class="frm-textarea" name="aciklama" id="aciklama" cols="30"
                                placeholder="Mesaj Giriniz" class="w-full h-[100px]">{{musteri.adres.kargo.aciklama}}</textarea>
                        </div>
                    </form>
                    <div class="text-center">
                        <button
                            class="btn-adres-clear w-1/2 py-2 bg-blue-500 hover:bg-blue-700 active:bg-blue-400 text-white rounded font-bold">
                            Temizle
                        </button>
                    </div>

                </div>
                <div class="spetbfyLeft px-4 py-2 border border-gray-200 rounded bg-white"></div>
            </div>
            <div class="lg:w-1/2 p-2 px-4 lg:px-16 ">
                <div class="spetbfyRight px-5 py-4 border border-gray-200 rounded sticky top-0 bg-white"></div>
            </div>
        </div>
    </div>

</div>
{{>footer}}

<div class="all-spinn">
  <div class="fixed top-0 left-0 w-[100vw] h-[100vh] flex flex-col items-center justify-center bg-[--acik] z-[999]">
    <div>
      <img src="/assets/logo.png" class="w-[200px] " alt="">
    </div>
    <div class="text-[3rem] text-orange-700">
      <div class="spin icon-spin-1 spin-steps1 "></div>
    </div>
  </div>
</div>