{{>header}}
<div>
    <div class="max-w-[--max-w] mx-auto ">
        <div class="py-2 text-gray-500 font-semibold  flex items-center space-x-2 text-[1rem] px-5 md:px-2">
            <span class="cursor-pointer">Anasayfa</span>
            <span class="tio">chevron_right</span>
            <a href="/{{pageurl}}" class="cursor-pointer font-normal italic">{{pagename}}</a>
        </div>
        <div class="flex md:space-x-5 mb-4 py-5">
            <div class="hidden md:block md:w-1/4 border border-gray-200">
                {{#IsEq pagename 'hakkimizda'}}
                <a href="/hakkimizda"
                    class="block px-4 py-2 hover:bg-black/10 text-[--main] font-semibold hover:text-black   border-gray-300 cursor-pointer">
                    Hakkımızda</a>
                {{else}}
                <a href="/hakkimizda"
