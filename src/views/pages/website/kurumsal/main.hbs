                    class="block px-4 py-2 hover:bg-black/10 border-t  text-[--main] font-semibold hover:text-black   border-gray-200 cursor-pointer">
                    İletişim</a>
                {{else}}
                <a href="/iletisim"
                    class="block px-4 py-2 hover:bg-black/10 border-t hover:font-semibold hover:text-black text-[--koyu-dark]  border-gray-200 cursor-pointer">

                    İletişim</a>
                {{/IsEq}}

                {{#IsEq pagename 'mesafeli-satis-sozlesmesi'}}
