                        <input type="password" name="newpassw2" id="newpassw2" placeholder="Şifre" class="frm-txt pasw">
                        <button data-cls="newpassw2"
                            class="btn-pass-sea-toggle tio rounded-full hover:bg-black/10 text-[1.2rem] text-gray-500 p-1 absolute top-1/2 right-1 -translate-y-1/2">password</button>
                    </div>
