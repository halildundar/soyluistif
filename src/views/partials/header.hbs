<header class="sticky top-0  z-[52] md:relative ">
  <div class="hidden md:flex items-center justify-between py-1 max-w-[--max-w] mx-auto">
    <div class="flex items-center space-x-2">
      <div class="flex items-center space-x-1">
        <i class="tio">call</i>
        <span class="text-gray-600 text-[0.9rem]">+903442361660</span>
      </div>
      <div class="flex items-center space-x-1">
        <i class="tio">email_outlined</i>
        <span class="text-gray-600 text-[0.9rem]">info@soyluistif.com</span>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <div class="text-[1.2rem] text-[--koyu] flex items-center justify-center space-x-2 ">
        <a href="" class="tio hover:text-[--main] hover:scale-[1.4] duration-150">facebook</a>
        <a href="" class="tio hover:text-[--main] hover:scale-[1.4] duration-150">instagram</a>
        <a href="" class="tio hover:text-[--main] hover:scale-[1.4] duration-150">youtube</a>
        <a href="" class="tio hover:text-[--main] hover:scale-[1.4] duration-150">twitter</a>
      </div>

      {{#if musteri}}
      <div class="relative group">
        <button class="flex items-center space-x-2 px-2 py-0.5 text-[0.9rem] hover:bg-black/10  bg-black/5  ">
          <i class="tio text-[1.2rem]">user</i>
          {{musteri.name}} {{musteri.surname}}
        </button>

        <div
          class="hidden group-hover:flex items-center flex-col absolute top-full right-0 w-[200px] min-h-[100px] bg-white z-[10] shadow-[0_0_10px_1px_rgba(0,0,0,0.2)]">
          <a  href="/musteri"
            class="bg-black/5  hover:bg-black/10 active:bg-transparent flex items-center space-x-2 rounded px-2 py-1 w-full">
            <i class="tio text-[1.2rem]">info_outined</i>
            Kullanıcı Bilgilerim
          </a>
          <button
            class="bg-black/5  hover:bg-black/10 active:bg-transparent flex items-center space-x-2 rounded px-2 py-1 w-full">
            <i class="tio text-[1.2rem]">shopping_icon</i>
            Siparişlerim
          </button>

          <hr>
          <div class="px-5 w-full pt-4">
            <button
              class="btn-logut bg-red-500 text-white hover:bg-red-600 active:bg-red-400 flex items-center space-x-2 rounded px-2 py-1 w-full">
              <i class="tio text-[1.2rem]">signout</i>
              Çıkış
            </button>
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
  <div class="hidden md:flex items-center  pb-1 max-w-[--max-w] mx-auto">
    <div class="relative w-1/4">
      <a href="/" class="flex">
        <img src="/assets/logoY.png" class="w-auto h-[5.5rem]" fetchpriority="high" alt="">
      </a>
    </div>
    <div class="w-1/2">
      <div class="flex overflow-hidden rounded-lg bg-white space-x-2 border border-gray-300">
        <select id="srch-kat-sel"
          class="bg-gray-200 px-4 text-gray-600 text-[1rem] border-r border-gray-300 outline-none">

          <option value="/kategori/all">Tüm Kategoriler</option>
          {{#each menus}}
          <option value="{{this.url}}">{{this.name}}</option>
          {{/each}}

        </select>
        <input type="text" class="intxt-sserch bg-transparent flex-1 text-[1.2rem]"
          placeholder="soyluistif.com.tr araması yapın">
        <div
          class="btn-srch tio inline-block p-2 text-[2rem] text-white  bg-[--main] hover:bg-[--main-dark] duration-200 cursor-pointer select-none">
          search</div>
      </div>
    </div>
    <div class="w-1/4 pl-2">
      <div class="flex items-center justify-end space-x-2">


        <a href="/favori"
          class="btn-go-fv flex items-center space-x-1 relative rounded-lg hover:bg-black/10 duration-300 px-2 py-1 cursor-pointer ">
          <i class="tio text-[1.6rem]">heart_outlined</i>
          <span class="text-[0.9rem]">Favoriler</span>
          <span
            class="favind absolute -top-2 -right-2 rounded-full  text-[0.9rem] flex items-center justify-center w-[1.4rem] h-[1.4rem]  text-white bg-[--main]"></span>
        </a>
        <a href="/sepet"
          class="flex items-center space-x-1 relative rounded-lg hover:bg-black/10 duration-300 px-2 py-1 cursor-pointer ">
          <i class="tio text-[1.6rem]">shopping_cart_outlined</i>
          <span class="text-[0.9rem]">Sepet</span>
          <span
            class="sepetind absolute -top-2 -right-2 rounded-full  text-[0.9rem] flex items-center justify-center w-[1.4rem] h-[1.4rem]  text-white bg-[--main]"></span>
        </a>
        {{#if musteri}}
        <a href="/siparis"
          class="flex items-center space-x-1 relative rounded-lg hover:bg-black/10 duration-300 px-2 py-1 cursor-pointer ">
          <i class="tio text-[1.6rem]">shopping_icon</i>
          <span class="text-[0.9rem]">Siparişler</span>
          <span
            class="siparisind absolute -top-2 -right-2 rounded-full  text-[0.9rem] flex items-center justify-center w-[1.4rem] h-[1.4rem]  text-white bg-[--main]"></span>
        </a>
        {{else}}
        <a href="/login"
          class="flex items-center space-x-1 relative rounded-lg hover:bg-black/10 duration-300 px-2 py-1 cursor-pointer ">
          <i class="tio text-[1.6rem]">user_big</i>
          <span class="text-[0.9rem]">Giriş Yap</span>
          <span
            class="siparisind absolute -top-2 -right-2 rounded-full  text-[0.9rem] flex items-center justify-center w-[1.4rem] h-[1.4rem]  text-white bg-[--main]"></span>
        </a>
        {{/if}}

      </div>
    </div>
  </div>
  <div class="hidden md:block bg-[--main]">
    <div class="flex items-center justify-evenly  max-w-[--max-w] mx-auto ">
      <div class="flex justify-between w-full py-4 text-[1.2rem]">
        <a href="/" class="flex items-center space-x-2 hover:bg-black/10 duration-300 px-3 py-2 " title="Anasayfa">
          <i class="tio text-[1.4rem] text-white">home</i>
          <div class="font-bold text-white "> ANASAYFA</div>
        </a>
        {{#each menus}}
        <a href="{{this.url}}" data-id="{{this.id}}" data-index="1"
          class="hover:bg-black/10 duration-300 text-white px-3 py-2 relative font-bold">
          {{this.name}}
        </a>
        {{/each}}
      </div>
    </div>
  </div>


  <div class="flex md:hidden items-center py-2 px-2 border-b-2 border-[--main]  bg-[--acik]">
    <div>
      <i class="tio text-[2rem] p-2 px-1 text-gray-600 mob-sid-men-op">menu_left</i>
    </div>
    <div class="flex-1 flex items-center justify-center">
      <a href="/">
        <img src="/assets/logoY.png" class="h-[50px] w-auto" fetchpriority="high" alt="">
      </a>
    </div>
    <div class="pr-2">
      <a href="/siparis"
        class="flex items-center space-x-1 relative rounded-lg hover:bg-black/10 duration-300 px-2 py-1 cursor-pointer ">
        <i class="tio text-[1.6rem]">shopping_icon</i>
        <span
          class="siparisind absolute -top-2 -right-2 rounded-full  text-[0.9rem] flex items-center justify-center w-[1.4rem] h-[1.4rem]  text-white bg-[--main]"></span>
      </a>

    </div>
  </div>
</header>


