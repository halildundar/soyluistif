{{> ctrlheader}}
<div class="urun-areaa">
    <div class="max-w-[--max-w] mx-auto flex py-5">
        <div class="w-1/3 pr-5">
            <div style="display:none" class="sel-area p-2 border border-gray-200 rounded-md mb-2">
                <div class="space-y-2 ">
                    <div class="frm-lbl">Kategori Düzenle</div>
                    <input type="text" placeholder="Kategori" class="frm-txt" name="kategori-edit">
                    <div class="flex items-center space-x-2">
                        <button
                            class="btn-guncelle bg-[orange] px-2 py-1 rounded text-white hover:bg-[#c58f2a] active:bg-[#fcc257]">Düzenle</button>
                        <button
                            class="btn-sil bg-[red] px-2 py-1 rounded text-white hover:bg-[#b72626] active:bg-[red]">Sil</button>
                        <div class="flex-1"></div>
                        <button
                            class="btn-temizle bg-[purple] px-2 py-1 rounded text-white hover:bg-[#6f166f] active:bg-[#ff5fff]">Seçimi
                            Kaldır</button>
                    </div>
                </div>
            </div>
            <div class=" p-2 border border-gray-200 rounded-md">
                <div class="frm-lbl eklelbl">Kategori Ekle</div>
                <div class="flex items-center space-x-2">
                    <input type="text" placeholder="Yeni Kategori" class="frm-txt" name="kategori">
                    <button
                        class="btn-add-kategori bg-[blue] px-2 py-1 rounded text-white hover:bg-[#2e2ed0] active:bg-[#7777f2]">Ekle</button>
                </div>
            </div>
            <hr class="pb-2">
            <div class=" border border-gray-200 rounded-md p-2 kategori-area"></div>
        </div>
        <div class="w-2/3">
            <div class="border border-gray-200 rounded-md p-2">
                <div class="flex items-center">
                    <div class="flex-1 py-1 px-2">
                        <div class="font-semibold text-[1.2rem]">Ürünler</div>
                        <div class="bread-area flex  items-center text-[0.8rem] italic"></div>
                    </div>
                    <div style="display:none" class="btn-area-urun flex items-center space-x-1 text-[1rem] text-white ">
                        <button
                            class="btn-urun-ekle rounded px-2 py-1 bg-blue-600 hover:bg-blue-800 active:bg-blue-400">Ekle</button>
                        <button style="display:none"
                            class="btn-urun-resim rounded px-2 py-1 bg-green-600 hover:bg-green-800 active:bg-green-400">Resimler</button>
                        <button style="display:none"
                            class="btn-urun-duzenle rounded px-2 py-1 bg-orange-600 hover:bg-orange-800 active:bg-orange-400">Düzenle</button>
                        <button style="display:none"
                            class="btn-urun-sil rounded px-2 py-1 bg-red-600 hover:bg-red-800 active:bg-red-400">Sil</button>
                        <button style="display:none"
                            class="btn-urun-temizle rounded px-2 py-1 bg-purple-600 hover:bg-purple-800 active:bg-purple-400">Seçimi
                            Kaldır</button>
                    </div>
                </div>
                <hr class="my-2">
                <div class="urun-area">
                    <table style="display:none" class="w-full border-collapse border border-gray-300">
                        <thead>
                            <tr class="text-[0.9rem] ">
                                <th class="bg-gray-100 text-start px-1">Adı</th>
                                <th class="bg-gray-100 text-start px-1">Link</th>
                                <th class="bg-gray-100 text-start px-1">Kod-Barkod</th>
                                <th class="bg-gray-100 text-start px-1">Fiyat(₺)</th>
                                <th class="bg-gray-100 text-start px-1">İndirim(%)</th>
                                <th class="bg-gray-100 text-start px-1">Net(₺)</th>
                                <th class="bg-gray-100 text-start px-1">Stok</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="p-1 border-l border-t border-gray-200">Deneme</td>
                                <td class="p-1 border-l border-t border-gray-200">Deneme</td>
                                <td class="p-1 border-l border-t border-gray-200">Deneme</td>
                                <td class="p-1 border-l border-t border-gray-200">Deneme</td>
                                <td class="p-1 border-l border-t border-gray-200">Deneme</td>
                                <td class="p-1 border-l border-t border-gray-200">Deneme</td>
                                <td class="p-1 border-l border-t border-gray-200">Deneme</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="kat-sec py-10 text-[1.4rem] text-black/40 font-semibold text-center"> Kategori Seçin!
                    </div>
                    <div style="display:none" class="urun-yok py-10 text-[1.4rem] text-black/40 font-semibold text-center"> Hiç Ürün Yok!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

