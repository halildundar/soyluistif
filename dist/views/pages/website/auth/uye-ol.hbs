{{>header}}

<div class="max-w-[--max-w] mx-auto flex items-center justify-center py-10 px-4">
    <div
        class="w-full lg:w-[400px] relative  h-auto flex flex-col items-center space-y-4 border border-gray-200 rounded-md lg:shadow-[0_0_10px_1px_rgba(0,0,0,0.2)]   lg:bg-white p-5">
        <a href="/" class="w-1/2 h-auto">
            <img src="/assets/logoY.png" alt="">
        </a>
        <div class=" text-orange-500 font-bold text-[1.4rem]">KAYIT OLUN</div>
        <form class="w-full flex flex-col space-y-2  ">
            <div class="flex items-center space-x-2">
                <div class="w-1/2">
                    <label for="name" class="frm-lbl">Ad <span class="text-red-600">*</span></label>
                    <input type="text" name="name" id="name" placeholder="Adınız" class="frm-txt">
                </div>
                <div class="w-1/2">
                    <label for="surname" class="frm-lbl">Soyad <span class="text-red-600">*</span></label>
                    <input type="text" name="surname" id="surname" placeholder="Soyadınz" class="frm-txt">
                </div>
            </div>
            <div class="flex items-center space-x-2">
                <div class="w-full">
                    <label for="email" class="frm-lbl">Email <span class="text-red-600">*</span></label>
                    <input type="text" name="email" id="email" placeholder="xxx@xxx.xxx" class="frm-txt">
                </div>
                <div class="w-full">
                    <label for="telefon" class="frm-lbl">Telefon <span class="text-red-600">*</span></label>
                    <input type="text" name="telefon" id="telefon" placeholder="+90 " class="frm-txt">
                </div>
            </div>

            <div class="flex items-center space-x-2">
                <div class="w-full">
                    <label for="newpassw1" class="frm-lbl">Şifre<span class="text-red-600">*</span></label>
                    <div class="relative">
                        <input type="password" name="newpassw1" id="newpassw1" placeholder="Şifre" class="frm-txt pasw">
                        <button data-cls="newpassw1"
                            class="btn-pass-sea-toggle tio rounded-full hover:bg-black/10 text-[1.2rem] text-gray-500 p-1 absolute top-1/2 right-1 -translate-y-1/2">password</button>
                    </div>
                </div>
                <div class="w-full">
                    <label for="newpassw2" class="frm-lbl">Şifre(tekrar)<span class="text-red-600">*</span></label>
                    <div class="relative">
                        <input type="password" name="newpassw2" id="newpassw2" placeholder="Şifre" class="frm-txt pasw">
                        <button data-cls="newpassw2"
                            class="btn-pass-sea-toggle tio rounded-full hover:bg-black/10 text-[1.2rem] text-gray-500 p-1 absolute top-1/2 right-1 -translate-y-1/2">password</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="pt-4">
            <button
                class="btn-uyeol bg-blue-600 hover:bg-blue-700 active:bg-blue-400 text-white px-3 py-1 rounded">Kaydet</button>
        </div>
        <div class="text-red-600 errtxt"></div>
        <div class="space-x-4">
            <a href="/login" class="text-blue-500 hover:underline">Giriş Yap</a>
        </div>
        <div style="display: none;" class="spnarea absolute top-0 left-0 w-full h-full bg-white/80 flex items-center justify-center">
            <div class="spin icon-spin-1 spin-steps1  text-[2.4rem] text-orange-600"></div>
        </div>
        <div style="display:none" class="onaymsg absolute top-0 left-0 w-full h-full flex flex-col items-center justify-center bg-white px-10">
            <div class="text-center text-orange-600 text-[1.4rem] py-2 font-bold">
                Kayıt talebiniz oluşturuldu.
            </div>
            <div class="text-semibold text-gray-500 text-center">
                Kaydınızın tamamlanması için lütfen emailinize gelen onay işlemlerini gerçekleştiriniz!
            </div>
            <div  class="text-center py-2">
                <a href="/login" class="text-blue-600 hover:underline font-semibold">Giriş Yapın!</a>
            </div>
        </div>
    </div>
</div>
{{>footer}}
