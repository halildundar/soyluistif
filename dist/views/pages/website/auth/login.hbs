{{>header}}

<div class="max-w-[--max-w] mx-auto flex items-center justify-center py-10 px-4">
    <div
        class="w-full md:w-[400px] relative h-auto flex flex-col items-center space-y-4 border border-gray-200 rounded-md lg:shadow-[0_0_10px_1px_rgba(0,0,0,0.2)]   lg:bg-white p-5">
        <a href="/" class="w-1/2 h-auto">
            <img src="/assets/logoY.png" alt="">
        </a>
        <div class=" text-orange-500 font-bold text-[1.4rem]">Giriş Yapın</div>
        <form class="w-[90%] flex flex-col space-y-2  ">
            <div class="w-full ">
                <label for="email" class="frm-lbl">Email Adres</label>
                <div class="relative">
                    <input type="text" name="email" id="email" placeholder="Email Adresi" class="frm-txt pl-4" value="">
                    <i
                        class="tio absolute top-1/2 right-2 -translate-y-1/2  text-[1.2rem] text-gray-500">email_outlined</i>
                </div>

            </div>
            <div class="w-full">
                <label for="passw" class="frm-lbl">Şifre</label>
                <div class="relative">
                    <input type="password" name="passw" id="passw" placeholder="Şifre" class="frm-txt" value="">
                    <button
                        class="btn-pass-sea-toggle tio rounded-full hover:bg-black/10 text-[1.2rem] text-gray-500 p-1 absolute top-1/2 right-1 -translate-y-1/2">password</button>
                </div>
            </div>
        </form>
        <div class="pt-4">
            <button
                class="btn-giris bg-blue-600 hover:bg-blue-700 active:bg-blue-400 text-white px-3 py-1 rounded">Giriş</button>
        </div>
        <div class="errtxt text-red-600 text-center"></div>
        <div class="space-x-4">
            <a href="/cust/sendactivation" class="hover:underline text-blue-500">Şifremi Unuttum</a>
            <a href="/uye-ol" class="text-blue-500 hover:underline">Üye Ol</a>
        </div>
        <div style="display: none;"
            class="spnarea absolute top-0 left-0 w-full h-full bg-white/80 flex items-center justify-center">
            <div class="spin icon-spin-1 spin-steps1  text-[2.4rem] text-orange-600"></div>
        </div>
    </div>
</div>
{{>footer}}

<div class="all-spinn">
  <div class="fixed top-0 left-0 w-[100vw] h-[100vh] flex flex-col items-center justify-center bg-[--acik] z-[999]">
    <div>
      <img src="/assets/logo.png" class="w-[200px] " alt="">
    </div>
    <div class="text-[3rem] text-orange-700">
      <div class="spin icon-spin-1 spin-steps1 "></div>
    </div>
  </div>
</div>