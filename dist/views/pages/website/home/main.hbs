                </div>
            </div>


        </div>

        <div class="overflow-hidden pt-5 ">
            <div class="font-semibold text-[1.4rem] py-2">Öne Çıkanlar</div>
            <div class="caro1 owl-carousel owl-theme">
                {{#each onecikanlar}}
                <a class="pr-2  cursor-pointer relative block z-0" route="/urun/{{this.url}}" data-ur="{{this.id}}">
                    <div
                        class="btn-fav z-10 absolute top-4 right-5  text-[2rem] tio text-orange-500 hover:text-orange-700 duration-200">
                        heart_outlined</div>
                    <div
                        class=" border border-gray-200 rounded-lg overflow-hidden pb-2 shadow-[0_0_10px_1px_rgba(0,0,0,0.1)]">
                        <div class="group h-[200px] overflow-hidden ">
                            <img src="{{this.img_on}}" class="group-hover:hidden w-full h-full" alt="">
                            <img src="{{this.img_arka}}" class="hidden group-hover:block w-full h-full" alt="">
                        </div>
                        <div class="py-2">
                            <div class="title text-[--koyu-dark] text-[0.8rem] text-center font-bold px-5 line-clamp-1">
                                {{this.name}}
                            </div>
                        </div>
                        <div class="py-2">
                            <div class="urun-kod text-center text-[0.8rem]">{{this.kod}}</div>
                            {{!-- <div class="barkod text-[--koyu] text-[0.8rem] text-center">{{this.barkod}}</div> --}}
                            <div class="stok text-[--koyu] text-[0.8rem] text-center"><strong>Stok:</strong>{{this.kalan_stok}} adet</div>
                        </div>
                        <div class="flex items-center w-1/2 mx-auto space-x-3">
                            <div
                                class="bg-[red] text-white text-[0.8rem] p-2 flex items-center justify-center rounded-md font-bold">
                                %{{this.indirim}}
                            </div>
                            <div>
                                <div class="line-through text-[0.8rem] text-[--koyu]">{{this.fiyat}}.00₺</div>
                                <div class="text-[1rem] leading-tight"><strong>{{this.indirimli_fiyat}}.00₺</strong>
                                </div>
                            </div>
                        </div>
                        <div class="btn-sepet-area py-2 flex items-center flex-col justify-center"
                            data-ur="{{this.id}}">
                            <div class="inline-flex border border-gray-200">
                                <div data-ur="{{this.id}}"
                                    class="btn-subsepet tio text-[1rem] p-2   font-bold bg-gray-200 select-none cursor-pointer hover:bg-gray-300">
                                    remove</div>
                                <input type="number" data-ur="{{this.id}}"
                                    class="in-adetsepet text-[0.9rem] w-[50px] border-r border-l border-gray-200 text-center"
                                    value="1">
                                <div data-ur="{{this.id}}"
                                    class="btn-addsepet tio text-[1rem] p-2 font-bold bg-gray-200 select-none cursor-pointer hover:bg-gray-300">
                                    add</div>
                            </div>
                            <div class="flex items-center justify-center py-2">
                                {{#IsEq this.stok 0}}
                                <div class="px-4 py-2 rounded-md bg-gray-200 text-red-600 font-bold text-[0.8rem]">
                                    <div>Stoklarımız Tükenmiştir. </div>
                                </div>
                                {{else}}
                                <button data-ur="{{this.id}}"
                                    class="btn-sepete-ekle px-2 py-1 text-white bg-blue-900  font-bold hover:bg-blue-950 active:bg-blue-700 rounded-md flex items-center space-x-2">
                                    <i class="tio text-[1rem]">shopping_cart_add</i>
                                    <div class="text-[0.9rem]"> <span>Sepete ekle</span></div>
                                </button>
                                {{/IsEq}}
                            </div>
                        </div>
                    </div>
                </a>
                {{else}}
                <div class="w-full bg-black/5 rounded-lg my-4 text-center py-5 font-bold text-gray-500 text-[1.4rem]">
                    Hiç Veri yok</div>
                {{/each}}
            </div>
        </div>
