{{> header}}
<div>
    <div class="max-w-[--max-w] mx-auto">

        <div class="py-2 text-gray-500 font-semibold  flex items-center space-x-2 text-[0.8rem] px-2">
            <span class="cursor-pointer">Anasayfa</span>
            <span class="tio">chevron_right</span>
            {{#each breadcrumbs}}

            {{#IsEq this.last 0}}
            <a href="{{this.url}}" class="cursor-pointer">{{this.name}}</a>
            <span class="tio">chevron_right</span>
            {{else}}
            <a href="{{this.url}}" class="cursor-pointer font-normal italic">{{this.name}}</a>
            {{/IsEq}}
            {{/each}}
        </div>
        <div class="flex py-2 md:py-4">
            <div class="hidden md:block md:w-1/4 pr-4 space-y-4">
                <div class="border border-gray-200 rounded-md pl-4 py-2">
                    <div class="font-semibold pb-2">Alt Kategoriler</div>
                    <div class="text-[0.8rem] max-h-[400px] overflow-y-auto">
                        {{#each altKategoriler}}
                        <a href="{{this.url}}" class="cursor-pointer text-gray-500 hover:text-orange-700 py-1 block">
                            {{this.name}}
                        </a>
                        {{/each}}
                    </div>
                </div>

                <div class="border border-gray-200 rounded-md px-4 py-2">
                    <div class="font-semibold pb-2">Para Birimi</div>
                    <div class="py-2 space-x-2 flex items-center select-none text-gray-600">
                        <div class="flex items-center space-x-1">
                            <input type="radio" id="USD" name="para_birim" value="USD" class="w-[1.2rem] h-[1.2rem]">
                            <label for="USD">USD($)</label>
                        </div>
                        <div class="flex items-center space-x-1">
                            <input type="radio" id="EUR" name="para_birim" value="EUR" class="w-[1.2rem] h-[1.2rem]">
                            <label for="EUR">EURO(€)</label>
                        </div>
                        <div class="flex items-center space-x-1">
                            <input type="radio" id="TL" name="para_birim" value="TRY" class="w-[1.2rem] h-[1.2rem]">
                            <label for="TL">TL(₺)</label>
                        </div>
                    </div>
                    <div class="font-semibold pb-2">Fiyat Aralıkları</div>
                    <div class="errfyat text-red-600 text-[0.8rem]"></div>
                    <div class="flex items-center space-x-2">
                        <input type="number" name="minfiyat" placeholder="En Az"
                            class="p-2 min-w-[20px] flex-1  border border-gray-200">
                        <span>-</span>
                        <input type="number" name="maxfiyat" placeholder="En Çok"
                            class="p-2 min-w-[20px] flex-1  border border-gray-200">
                        <button class="btn-go-fiyat p-2 border border-gray-300 tio bg-gray-200 hover:bg-gray-300">
                            arrow_forward
                        </button>
                    </div>
                    <div class="py-2 space-y-1 select-none text-gray-600">

                        {{#each filtreElemanlar}}
                        {{#IsEq @index 0}}
                        <div class="flex items-center space-x-2">
                            <input type="radio" id="fiyat_{{min}}-{{max}}" name="minmax" value="`{{min}}-{{max}}`"
                                class="w-[1.2rem] h-[1.2rem]" checked>
                            <label for="fiyat_{{min}}-{{max}}">Tüm Fiyatlar <span
                                    class="text-[0.8rem] text-red-500 italic"> [{{total}} ürün]</span> </label>
                        </div>
                        {{else}}
                        <div class="flex items-center space-x-2">
                            <input type="radio" id="fiyat_{{min}}-{{max}}" name="minmax" value="`{{min}}-{{max}}`"
                                class="w-[1.2rem] h-[1.2rem]">
                            <label for="fiyat_{{min}}-{{max}}">{{minStr}} $ - {{maxStr}} $ <span
                                    class="text-[0.8rem] text-red-500 italic"> [{{total}} ürün]</span> </label>
                        </div>
                        {{/IsEq}}
                        {{/each}}
